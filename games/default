<!DOCTYPE html>
<html>
	<head>
		<title>Just a Default Block</title>
		<script src="../static/jquery.min.js"></script>
		<script type="text/javascript">
			$(document).ready(function() {
				var wsurl = "ws://li60-203.members.linode.com/results";
				wsurl = wsurl + "?room=" + encodeURIComponent("{{ room }}");
				wsurl = wsurl + "&name=" + encodeURIComponent("{{ user }}");
				var game_ws = new WebSocket(wsurl);
				$("div").click(function() {
					game_ws.send(JSON.stringify({
						"type" : "game result",
						"player" : "{{ user }}",
						"room" : "{{ room }}",
						"game" : "default",
						"score" : "default block loaded"
					}));
					game_ws.close();
				});
			});
		</script>
		<style type="text/css">
			div {
				border: 1px dashed black;
				background: #bbccbb;
			}
		</style>
	</head>
	<body>
		<div>You are playing in {{ room }}</div>
	</body>
</html>
